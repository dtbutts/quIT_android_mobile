        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:textSize="15dp"
            android:text="How long have you been struggling with addiction?"
            android:textColor="@color/ourPurple"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/lengthOfAddiction">

            <TextView
                android:id="@+id/daysOfAddiction"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/boarder"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:text="Approximate Start Date*"
                android:textColor="@color/ourPurple"
                android:textSize="15dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:textSize="15dp"
            android:text="Are you currently sober?"
            android:textColor="@color/ourPurple"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton android:id="@+id/radio_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Yes"
                android:textColor="@color/ourPurple"
                android:buttonTint="@color/ourTeal"
                />

            <RadioButton android:id="@+id/radio_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textColor="@color/ourPurple"
                android:buttonTint="@color/ourTeal"
                android:text="No"
                />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/lengthOfSobriety">

            <TextView
                android:id="@+id/daysOfSobriety"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/boarder"
                android:lines="1"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:gravity="center"/>
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:text="Choose Sobriety Date"
                android:textColor="@color/ourPurple"
                android:textSize="15dp"/>
        </RelativeLayout>
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:textSize="15dp"
            android:text="TERMS AND CONDITIONS"
            android:textColor="@color/ourPurple"
            />
        <CheckBox
            android:id="@+id/termsConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ourPurple"
            android:text="Your personal data will be kept private unless you choose to share it using the social features of the QuIT app. QuIT will use the above information only to calculate your sobriety progress and its effects on your life."
            android:buttonTint="@color/ourTeal"
            android:lines="5"/>
    
        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="@color/ourTeal"/>
    
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/alreadyUser"
            android:backgroundTint="@color/ourPurple"
            android:text="Existing user? Login"
            >
        </Button>
    
    </LinearLayout>
</LinearLayout>